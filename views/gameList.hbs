<!doctype html>

<html>

    {{#> head title="Games"}}
    <link rel="import" href="/components/iron-list/iron-list.html">

    <link rel="import" href="/elements/pugchamp-game-summary/pugchamp-game-summary.html">
    {{/head}}

    {{#> body}}
    <h1>Games</h1>

    <iron-list as="game" id="games">
        <template>
            <pugchamp-game-summary game="\{{game}}"></pugchamp-game-summary>
        </template>
    </iron-list>

    <script>
        var gamesList = document.getElementById('games');

        gamesList.items = {{{toJSON games}}};
    </script>
    {{/body}}

</html>
