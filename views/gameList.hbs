<!doctype html>

<html>

    {{#> head title="Games"}}
    <link rel="import" href="/components/iron-flex-layout/classes/iron-flex-layout.html">
    <link rel="import" href="/components/paper-material/paper-material.html">
    <link rel="import" href="/components/paper-styles/colors.html">
    <link rel="import" href="/components/paper-styles/typography.html">

    <style is="custom-style">
        .match {
            margin: 5px;
        }

        .match > div {
            padding: 10px;
        }

        .status {
            text-align: center;
        }

        .details {
            text-align: center;
        }

        .team .captain {
            font-size: 21px;
            font-weight: 500;
        }

        .team .score {
            font-size: 28px;
            font-weight: 600;
            text-align: center;
        }

        .team.team-0 .captain {
            margin-right: 10px;
            text-align: right;
        }

        .team.team-1 .captain {
            margin-left: 10px;
            text-align: left;
        }

        .team.faction-BLU {
            background: var(--paper-red-500);
            color: var(--paper-grey-300);
            opacity: var(--light-primary-opacity);
        }

        .team.faction-RED {
            background: var(--paper-blue-500);
            color: var(--paper-grey-300);
            opacity: var(--light-primary-opacity);
        }
    </style>
    {{/head}}

    {{#> body}}
    <h1>Games</h1>

    {{#each games}}
        <paper-material class="match horizontal layout">
            <div class="status flex vertical layout center center-justified">
                <a href="/game/{{id}}">{{momentFromNow date}}</a>
                <span>{{status}}</span>
            </div>
            <div class="team team-0 {{#if teams.[0].faction}}faction-{{teams.[0].faction}}{{/if}} flex-3 horizontal layout">
                <div class="captain flex-10 vertical layout center-justified">
                    <span>{{teams.[0].captain.alias}}</span>
                </div>
                {{#if score.[0]}}
                    <div class="score flex vertical layout center-justified">
                        <span>{{score.[0]}}</span>
                    </div>
                {{/if}}
            </div>
            <div class="details flex vertical layout center center-justified">
                <span>{{map.name}}</span>
                {{#if duration}}
                    {{}}
                {{/if}}
            </div>
            <div class="team team-1 {{#if teams.[1].faction}}faction-{{teams.[1].faction}}{{/if}} flex-3 horizontal layout">
                {{#if score.[1]}}
                    <div class="score flex vertical layout center-justified">
                        <span>{{score.[1]}}</span>
                    </div>
                {{/if}}
                <div class="captain flex-10 vertical layout center-justified">
                    <span>{{teams.[1].captain.alias}}</span>
                </div>
            </div>
        </paper-material>
    {{/each}}
    {{/body}}

</html>
