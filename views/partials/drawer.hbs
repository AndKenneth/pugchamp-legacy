<paper-header-panel drawer id="drawer">
    <paper-toolbar>
        <div class="flex app-name" hidden$="\{{narrow}}">PugChamp</div>
    </paper-toolbar>

    <paper-menu id="drawer-menu">
        <a href="/" {{#if home}} target="_blank" {{/if}}>
            <paper-icon-item>
                <iron-icon icon="home" item-icon></iron-icon> Home
            </paper-icon-item>
        </a>

        <hr>

        <a href="/players" {{#if home}} target="_blank" {{/if}}>
            <paper-icon-item>
                <iron-icon icon="social:people" item-icon></iron-icon> Players
            </paper-icon-item>
        </a>

        <a href="/games" {{#if home}} target="_blank" {{/if}}>
            <paper-icon-item>
                <iron-icon icon="hardware:gamepad" item-icon></iron-icon> Games
            </paper-icon-item>
        </a>

        <hr>

        {{#if pages}}
            {{#each pages}}
                <a href="{{url}}" {{#if ../home}} target="_blank" {{/if}}>
                    <paper-icon-item>
                        <iron-icon icon="{{icon}}" item-icon></iron-icon> {{title}}
                    </paper-icon-item>
                </a>
            {{/each}}

            <hr>
        {{/if}}

        {{#if user}}
            {{#if user.admin}}
                <a href="/admin/users" {{#if home}} target="_blank" {{/if}}>
                    <paper-icon-item>
                        <iron-icon icon="social:people" item-icon></iron-icon> Manage Users
                    </paper-icon-item>
                </a>

                <a href="/admin/games" {{#if home}} target="_blank" {{/if}}>
                    <paper-icon-item>
                        <iron-icon icon="hardware:gamepad" item-icon></iron-icon> Manage Games
                    </paper-icon-item>
                </a>

                <a href="/admin/servers" {{#if home}} target="_blank" {{/if}}>
                    <paper-icon-item>
                        <iron-icon icon="hardware:developer-board" item-icon></iron-icon> Manage Servers
                    </paper-icon-item>
                </a>

                <hr>
            {{/if}}

            <a href="/player/{{user.steamID}}" {{#if home}} target="_blank" {{/if}}>
                <paper-icon-item>
                    <iron-icon icon="account-box" item-icon></iron-icon> Profile
                </paper-icon-item>
            </a>

            <a href="/user/settings" {{#if home}} target="_blank" {{/if}}>
                <paper-icon-item>
                    <iron-icon icon="settings" item-icon></iron-icon> Settings
                </paper-icon-item>
            </a>

            <a href="/user/logout">
                <paper-icon-item>
                    <iron-icon icon="lock" item-icon></iron-icon> Sign Out
                </paper-icon-item>
            </a>
        {{else}}
            <a href="/user/login">
                <paper-icon-item>
                    <iron-icon icon="lock-open" item-icon></iron-icon>
                    <img src="https://steamcommunity-a.akamaihd.net/public/images/signinthroughsteam/sits_small.png">
                </paper-icon-item>
            </a>
        {{/if}}

    </paper-menu>
</paper-header-panel>
