<!doctype html>

<html>

<head>
	<script src="/components/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.min.css">
    <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    {{> header }}

	<div class="container">
		<h2>User Settings</h2>

		{{#unless user.setUp}}
			<div class="alert alert-warning" role="alert"><strong>Warning</strong>: you need to set up your account before you can use this site.</div>
		{{/unless}}

		<form class="form-horizontal" method="POST">
			<div class="form-group">
				<label for="alias" class="col-sm-2 control-label">Alias</label>
				<div class="col-sm-10">
					{{#unless user.alias}}
						<input type="text" class="form-control" id="alias" name="alias" title="alphanumeric characters and underscores only" placeholder="thesupremecommander" pattern="\w+">
					{{else}}
						<input type="text" class="form-control" id="alias" value="{{user.alias}}" disabled>
					{{/unless}}
				</div>
			</div>
			<div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-10">
		      		<button type="submit" class="btn btn-primary">Save</button>
		    	</div>
		  	</div>
		</form>
	</div>

    {{> footer }}
</body>

</html>
