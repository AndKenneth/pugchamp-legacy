{
  "name": "pugchamp",
  "description": "PUG service",
  "private": true,
  "repository": "fwdcp/pugchamp",
  "dependencies": {
    "bluebird": "^3.3.5",
    "body-parser": "^1.15.0",
    "botkit": "^0.1.1",
    "chance": "^1.0.2",
    "co": "^4.6.0",
    "config": "^1.20.1",
    "connect-mongo": "^1.1.0",
    "debug": "^2.2.0",
    "distributions": "^0.2.1",
    "express": "^4.13.3",
    "express-session": "^1.12.1",
    "gamedig": "^0.2.24",
    "hbs": "^4.0.0",
    "heapdump": "^0.3.7",
    "http-status-codes": "^1.0.6",
    "humanize": "0.0.9",
    "idle-gc": "^1.0.1",
    "js-combinatorics": "^0.5.1",
    "jsonwebtoken": "^6.2.0",
    "limiter": "^1.1.0",
    "lodash": "^4.11.1",
    "mathjs": "^3.2.1",
    "moment": "^2.13.0",
    "moment-duration-format": "^1.3.0",
    "mongoose": "^4.4.14",
    "ms": "^0.7.1",
    "mz": "^2.4.0",
    "passport": "^0.3.2",
    "passport-openid": "fwdcp/passport-openid",
    "q": "^1.4.1",
    "redis": "^2.6.0-1",
    "request-promise": "^3.0.0",
    "serve-static": "^1.10.0",
    "socket.io": "^1.3.7",
    "socketio-jwt": "^4.3.3",
    "srcds-rcon": "^2.2.0",
    "timesync": "^0.2.0",
    "twitter-text": "^1.13.4"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:lodash/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6
    },
    "plugins": [
      "lodash"
    ],
    "rules": {
      "array-callback-return": "error",
      "arrow-body-style": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "arrow-spacing": "error",
      "block-scoped-var": "error",
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "callback-return": "error",
      "comma-style": "error",
      "curly": "error",
      "dot-location": "error",
      "dot-notation": "error",
      "eqeqeq": "error",
      "global-require": "error",
      "handle-callback-err": "error",
      "key-spacing": "error",
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-mixed-requires": "error",
      "no-new-require": "error",
      "no-path-concat": "error",
      "no-process-exit": "error",
      "no-shadow": "error",
      "no-throw-literal": "error",
      "no-unneeded-ternary": "error",
      "no-use-before-define": "error",
      "object-shorthand": "error",
      "operator-assignment": "error",
      "prefer-spread": "error",
      "prefer-template": "error",
      "require-yield": "error",
      "quotes": [
        "error",
        "single"
      ],
      "template-curly-spacing": "error",
      "yoda": "error"
    }
  }
}
